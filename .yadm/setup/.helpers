#!/bin/bash

function temp_folder() {
  case "$(uname -s)" in
    "Darwin")
      tmp_template="${1}"
      ;;
    "Linux")
      tmp_template="${1}-XXXXXX"
      ;;
  esac
  echo "${tmp_template}"
}

function read_file_to_array() {
    local file=${1}
    declare -a v
    let i=0
    while IFS=$'\n' read -r line; do
      v[i]="${line}"
      ((++i))
    done < ${file}
    echo "${v[@]}"
}
