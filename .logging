#!/usr/bin/env sh

LEVEL_INFO="INFO"
LEVEL_WARN="WARN"
LEVEL_ERROR="ERROR"

DARKGRAY="\033[1;30m"
RED="\033[0;31m"
LIGHTRED="\033[1;31m"
GREEN="\033[0;32m"
YELLOW="\033[1;33m"
BLUE="\033[0;34m"
PURPLE="\033[0;35m"
LIGHTPURPLE="\033[1;35m"
CYAN="\033[0;36m"
WHITE="\033[1;37m"
NONE="\033[0m"

PADDING="      "

function _log () {
  time=$(date +"%d-%m-%Y %H:%M:%S")
  timestamp="${BLUE}${time}${NONE}"
  case "${1}" in 
    INFO)
      level="${GREEN}${PADDING:${#1}}${1}${NONE}"
      message="${2}"
      ;;
    WARN)
      level="${YELLOW}${PADDING:${#1}}${1}${NONE}"
      message="${2}"
      ;;
    ERROR)
      level="${RED}${PADDING:${#1}}${1}${NONE}"
      message="${LIGHTRED}${2}${NONE}"
      ;;
  esac

  echo "[${timestamp}] [${level}] ${message}"
}

function log_info () {
  _log ${LEVEL_INFO} "${1}"
}

function log_warn () {
  _log ${LEVEL_WARN} "${1}"
}

function log_error () {
  _log ${LEVEL_ERROR} "${1}"
}

