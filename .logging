#!/usr/bin/env sh

LEVEL_INFO="INFO"
LEVEL_WARN="WARN"
LEVEL_ERROR="ERROR"
LEVEL_DEBUG="DEBUG"

BLACK="\e[30m"
RED="\e[31m"
GREEN="\e[32m"
YELLOW="\e[33m"
BLUE="\e[34m"
PURPLE="\e[35m"
CYAN="\e[36m"
WHITE="\e[37m"
NONE="\e[39m"
LIGHTRED="\e[91m"
LIGHTGREEN="\e[92m"
LIGHTBLUE="\e[94m"
LIGHTPURPLE="\e[95m"
LIGHTCYAN="\e[96m"

PADDING="      "

function _log () {
  time=$(date +"%d-%m-%Y %H:%M:%S")
  timestamp="${time}"
  case "${1}" in 
    INFO)
      level="${BLUE}${PADDING:${#1}}${1}${NONE}"
      message="${2}"
      ;;
    WARN)
      level="${YELLOW}${PADDING:${#1}}${1}${NONE}"
      message="${2}"
      ;;
    ERROR)
      level="${RED}${PADDING:${#1}}${1}${NONE}"
      message="${LIGHTRED}${2}${NONE}"
      ;;
    DEBUG)
      level="${GREEN}${PADDING:${#1}}${1}${NONE}"
      message="${LIGHTGREEN}${2}${NONE}"
      ;;
  esac

  printf "${timestamp} [${level}] ${message}\n"
}

function log_info () {
  if [ "${LOGGING_INFO_ENABLED:-true}" = true ]; then
    _log ${LEVEL_INFO} "${1}"
  fi
}

function log_warn () {
  if [ "${LOGGING_WARN_ENABLED:-true}" = true ]; then
    _log ${LEVEL_WARN} "${1}"
  fi
}

function log_error () {
  if [ "${LOGGING_ERROR_ENABLED:-true}" = true ]; then
    _log ${LEVEL_ERROR} "${1}"
  fi
}

function log_debug () {
  if [ "${LOGGING_DEBUG_ENABLED:-false}" = true ]; then
    _log ${LEVEL_DEBUG} "${1}"
  fi
}
