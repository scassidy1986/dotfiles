#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

source ${DIR}/.env
source ${HOME}/.logging
source ${DIR}/.helpers-linux

log_info "$0 $@"

add_repository "ppa:webupd8team/atom"

sudo apt update

install_dependency "zsh"
install_dependency "tree"
install_dependency "atom"
install_dependency "build-essential"
